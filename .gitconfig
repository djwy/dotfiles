[alias]
    check = diff --cached --color=always
    co = checkout
    fix = commit --amend
    llog = log --graph --decorate --name-status --color=always
    logp = log --graph --decorate -p --word-diff
    rework = rebase --interactive HEAD~10
    wcheck = diff --cached --color-words
    wdiff = diff --color-words
    wshow = show --color-words
[branch]
    autosetuprebase = always
[color]
    branch = auto
    diff = auto
    difftool = auto
    grep = auto
    interactive = auto
    log = auto
    status = auto
    ui = auto
[core]
    excludesfile = $HOME/.gitignore_global
[diff]
    compactionHeuristic = true
[merge]
    ff = only
[pager]
    diff = "diff-highlight | less"
    log = "diff-highlight | less"
    show = "diff-highlight | less"
[push]
    default = upstream
[rerere]
    enabled = 1
